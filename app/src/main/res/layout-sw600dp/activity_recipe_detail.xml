<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/recipe_steps_container"
        android:layout_width="@dimen/master_pane_width"
        android:layout_height="match_parent"
        android:scaleType="centerInside" />

    <View
        android:layout_width="@dimen/separator_thickness"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"
        android:paddingEnd="@dimen/space_four_units"
        android:paddingStart="@dimen/space_four_units" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/space_one_unit"
        tools:ignore="InconsistentLayout">

        <FrameLayout
            android:id="@+id/media_player_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:scaleType="centerInside"
            tools:ignore="InconsistentLayout" />

        <ScrollView
            android:id="@+id/step_instruction_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            tools:ignore="InconsistentLayout" />

    </LinearLayout>

</LinearLayout>