<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CardListItem">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_card_recipe_image"
            android:layout_width="@dimen/card_height"
            android:layout_height="match_parent"
            android:contentDescription="@string/recipe_image_description" />

        <TextView
            android:id="@+id/tv_recipe_name"
            style="@style/CardTexts"
            android:layout_marginStart="@dimen/space_two_units"
            app:layout_constraintBottom_toTopOf="@+id/iv_card_recipe_image"
            app:layout_constraintStart_toEndOf="@+id/iv_card_recipe_image"
            app:layout_constraintTop_toBottomOf="@+id/iv_card_recipe_image" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>